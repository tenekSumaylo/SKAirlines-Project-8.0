<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SKAirlines_Project.CustomControl.NounderlineEntry"
             x:Name="this"
             RowDefinitions="54">
    
    <Frame Grid.Row="0" Padding="8" BorderColor="White">
        <Entry Text="{Binding Source={x:Reference this}, Path=Text}"/>
    </Frame>
    <Label Grid.Row="0"
           Margin="10,0,10,0"
           Text="{Binding Source={x:Reference this}, Path=Placeholder}"
           BackgroundColor="White"
           HorizontalOptions="StartAndExpand"
           VerticalOptions="CenterAndExpand"/>
</Grid>
