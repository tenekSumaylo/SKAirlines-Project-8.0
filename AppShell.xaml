<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SKAirlines_Project.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SKAirlines_Project"
    xmlns:views="clr-namespace:SKAirlines_Project.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="SKAirlines_Project">
    
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}" 
        Route="MainPage" 
        />
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:RegisterPage}" 
        Route="RegisterPage" 
        />
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:HomePage}"
        Route="HomePage" 
        />
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:BookingPage}"
        Route="BookingPage" 
        />
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:AdminPage}"
        Route="AdminPage" 
        />
</Shell>
