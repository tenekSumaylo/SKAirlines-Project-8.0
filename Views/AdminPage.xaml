<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SKAirlines_Project.Views.AdminPage"
             Title="AdminPage"
            >
    <VerticalStackLayout Padding="0,25,0,0" Spacing="18" HorizontalOptions="Center">
        <VerticalStackLayout Spacing="5">
            <Label Text="Origin"/>
            <Picker x:Name="origin" BackgroundColor="Gray" WidthRequest="180" />
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Destination"/>
            <Picker x:Name="destination" BackgroundColor="Gray" WidthRequest="180"  />
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Number of seats"/>
            <Entry BackgroundColor="Gray" WidthRequest="180" Keyboard="Numeric" Text="{Binding testSeat}"/>
        </VerticalStackLayout>
        <Button Clicked="Button_Clicked" Text="Add Flight"/>

    </VerticalStackLayout>
</ContentPage>